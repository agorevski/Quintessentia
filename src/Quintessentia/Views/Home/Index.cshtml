@{
    ViewData["Title"] = "Quintessentia";
}

<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-8 col-lg-6">
            <div class="text-center mb-5">
                <h1 class="display-3 fw-bold mb-3" style="color: #0891b2; text-shadow: 2px 2px 8px rgba(8, 145, 178, 0.3);">
                    <i class="bi bi-droplet" style="display: inline-block; filter: drop-shadow(0 0 8px rgba(6, 182, 212, 0.5));"></i> Quintessentia
                </h1>
                <p class="lead text-muted" style="font-size: 1.3rem; text-shadow: 1px 1px 3px rgba(0,0,0,0.2);">Distilling audio down to its pure essence</p>
            </div>

            <div class="card shadow-lg border-0">
                <div class="card-body p-5 position-relative">
                    <!-- Settings Icon -->
                    <button type="button" class="btn btn-link position-absolute top-0 end-0 mt-3 me-3 p-0 position-relative" 
                            id="settingsButton" data-bs-toggle="modal" data-bs-target="#settingsModal"
                            title="Azure OpenAI Settings"
                            style="overflow: visible;">
                        <i class="bi bi-gear-fill fs-4 text-secondary"></i>
                        <span id="customSettingsBadge" class="position-absolute badge rounded-pill bg-info d-none" 
                              style="font-size: 0.6rem; top: -8px; right: -12px;">Custom</span>
                    </button>

                    <form id="audioForm" asp-controller="Audio" asp-action="ProcessAndSummarize" method="post">
                        <!-- Hidden fields for settings -->
                        <input type="hidden" id="settingsEndpoint" name="settingsEndpoint" />
                        <input type="hidden" id="settingsKey" name="settingsKey" />
                        <input type="hidden" id="settingsWhisperDeployment" name="settingsWhisperDeployment" />
                        <input type="hidden" id="settingsGptDeployment" name="settingsGptDeployment" />
                        <input type="hidden" id="settingsTtsDeployment" name="settingsTtsDeployment" />
                        <div class="mb-4">
                            <label for="audioUrl" class="form-label fw-semibold">Audio Episode MP3 URL</label>
                            <input type="url" 
                                   class="form-control form-control-lg" 
                                   id="audioUrl" 
                                   name="audioUrl" 
                                   placeholder="https://example.com/audio-episode.mp3" 
                                   required>
                            <div class="form-text">Paste a direct URL to an MP3 audio file</div>
                        </div>

                        <div class="alert alert-info mb-4" role="alert">
                            <i class="bi bi-magic"></i> <strong>AI Processing Pipeline:</strong>
                            <ol class="mb-0 mt-2 ps-3">
                                <li>Download & cache original episode</li>
                                <li>Transcribe audio to text (whisper)</li>
                                <li>Summarize to 5-minute content (gpt-5)</li>
                                <li>Generate summary audio (gpt-4o-mini-tts)</li>
                            </ol>
                        </div>

                        <div id="processingProgress" class="card mb-4 d-none">
                            <div class="card-body">
                                <h5 class="card-title mb-3">
                                    <i class="bi bi-hourglass-split"></i> Processing Status
                                </h5>
                                <div class="progress mb-3" style="height: 25px;">
                                    <div id="progressBar" class="progress-bar progress-bar-striped progress-bar-animated" 
                                         role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                                        0%
                                    </div>
                                </div>
                                <ul id="statusList" class="list-group list-group-flush">
                                    <!-- Status updates will be added here -->
                                </ul>
                            </div>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg" id="goButton">
                                <i class="bi bi-stars"></i>
                                <span id="buttonText">Process & Summarize</span>
                                <span id="buttonSpinner" class="spinner-border spinner-border-sm ms-2 d-none" role="status" aria-hidden="true"></span>
                            </button>
                        </div>
                    </form>

                    <div id="resultSection" class="mt-4 d-none">
                        <hr class="my-4">
                        <div id="resultContent"></div>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <small class="text-muted">
                    <i class="bi bi-info-circle"></i> Enter a direct MP3 URL to download and cache the audio episode
                </small>
            </div>
        </div>
    </div>
</div>

<!-- Settings Modal -->
<div class="modal fade" id="settingsModal" tabindex="-1" aria-labelledby="settingsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="settingsModalLabel">
                    <i class="bi bi-gear-fill"></i> Azure OpenAI Settings
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle"></i> <small>Override default settings from appsettings.json. Leave fields empty to use defaults.</small>
                </div>
                <form id="settingsForm">
                    <div class="mb-3">
                        <label for="modalEndpoint" class="form-label">Azure OpenAI Endpoint</label>
                        <input type="url" class="form-control" id="modalEndpoint" 
                               placeholder="https://your-resource.openai.azure.com/">
                    </div>
                    <div class="mb-3">
                        <label for="modalKey" class="form-label">API Key</label>
                        <input type="password" class="form-control" id="modalKey" 
                               placeholder="Your API key">
                    </div>
                    <div class="mb-3">
                        <label for="modalWhisperDeployment" class="form-label">Whisper Deployment Name</label>
                        <input type="text" class="form-control" id="modalWhisperDeployment" 
                               placeholder="whisper">
                    </div>
                    <div class="mb-3">
                        <label for="modalGptDeployment" class="form-label">GPT Deployment Name</label>
                        <input type="text" class="form-control" id="modalGptDeployment" 
                               placeholder="gpt-5-2">
                    </div>
                    <div class="mb-3">
                        <label for="modalTtsDeployment" class="form-label">TTS Deployment Name</label>
                        <input type="text" class="form-control" id="modalTtsDeployment" 
                               placeholder="gpt-4o-mini-tts">
                    </div>
                    <div class="mb-3">
                        <label for="modalTtsSpeedRatio" class="form-label">
                            TTS Speed Ratio: <span id="speedRatioValue">1.00</span>x
                        </label>
                        <input type="range" class="form-range" id="modalTtsSpeedRatio" 
                               min="0.75" max="3.0" step="0.05" value="1.0">
                        <div class="d-flex justify-content-between">
                            <small class="text-muted">0.75x (Slower)</small>
                            <small class="text-muted">3.0x (Faster)</small>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="modalTtsResponseFormat" class="form-label">TTS Audio Format</label>
                        <select class="form-select" id="modalTtsResponseFormat">
                            <option value="mp3">MP3</option>
                            <option value="opus">Opus</option>
                            <option value="aac">AAC</option>
                            <option value="flac">FLAC</option>
                            <option value="wav">WAV</option>
                            <option value="pcm">PCM</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="resetSettingsBtn">
                    <i class="bi bi-arrow-counterclockwise"></i> Reset to Defaults
                </button>
                <button type="button" class="btn btn-primary" id="saveSettingsBtn">
                    <i class="bi bi-check-lg"></i> Save Settings
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let eventSource = null;
        let latestStatus = null;

        // Settings management
        const SETTINGS_KEY = 'azureOpenAISettings';

        // Update speed ratio display when slider changes
        document.getElementById('modalTtsSpeedRatio').addEventListener('input', function(e) {
            document.getElementById('speedRatioValue').textContent = parseFloat(e.target.value).toFixed(2);
        });

        // Load settings from localStorage on page load
        function loadSettings() {
            const savedSettings = localStorage.getItem(SETTINGS_KEY);
            if (savedSettings) {
                try {
                    const settings = JSON.parse(savedSettings);
                    
                    // Populate modal fields
                    document.getElementById('modalEndpoint').value = settings.endpoint || '';
                    document.getElementById('modalKey').value = settings.key || '';
                    document.getElementById('modalWhisperDeployment').value = settings.whisperDeployment || '';
                    document.getElementById('modalGptDeployment').value = settings.gptDeployment || '';
                    document.getElementById('modalTtsDeployment').value = settings.ttsDeployment || '';
                    
                    // TTS settings
                    if (settings.ttsSpeedRatio) {
                        document.getElementById('modalTtsSpeedRatio').value = settings.ttsSpeedRatio;
                        document.getElementById('speedRatioValue').textContent = parseFloat(settings.ttsSpeedRatio).toFixed(2);
                    }
                    if (settings.ttsResponseFormat) {
                        document.getElementById('modalTtsResponseFormat').value = settings.ttsResponseFormat;
                    }
                    
                    // Update hidden form fields
                    updateHiddenFields(settings);
                    
                    // Show custom badge
                    if (hasCustomSettings(settings)) {
                        document.getElementById('customSettingsBadge').classList.remove('d-none');
                    }
                } catch (error) {
                    console.error('Error loading settings:', error);
                }
            }
        }

        function hasCustomSettings(settings) {
            return settings && (
                settings.endpoint ||
                settings.key ||
                settings.whisperDeployment ||
                settings.gptDeployment ||
                settings.ttsDeployment ||
                settings.ttsSpeedRatio ||
                settings.ttsResponseFormat
            );
        }

        function updateHiddenFields(settings) {
            document.getElementById('settingsEndpoint').value = settings.endpoint || '';
            document.getElementById('settingsKey').value = settings.key || '';
            document.getElementById('settingsWhisperDeployment').value = settings.whisperDeployment || '';
            document.getElementById('settingsGptDeployment').value = settings.gptDeployment || '';
            document.getElementById('settingsTtsDeployment').value = settings.ttsDeployment || '';
        }

        // Save settings button
        document.getElementById('saveSettingsBtn').addEventListener('click', function() {
            const speedRatio = parseFloat(document.getElementById('modalTtsSpeedRatio').value);
            const responseFormat = document.getElementById('modalTtsResponseFormat').value;
            
            const settings = {
                endpoint: document.getElementById('modalEndpoint').value.trim(),
                key: document.getElementById('modalKey').value.trim(),
                whisperDeployment: document.getElementById('modalWhisperDeployment').value.trim(),
                gptDeployment: document.getElementById('modalGptDeployment').value.trim(),
                ttsDeployment: document.getElementById('modalTtsDeployment').value.trim(),
                ttsSpeedRatio: speedRatio !== 1.0 ? speedRatio : null,
                ttsResponseFormat: responseFormat !== 'mp3' ? responseFormat : null
            };

            // Save to localStorage
            localStorage.setItem(SETTINGS_KEY, JSON.stringify(settings));
            
            // Update hidden form fields
            updateHiddenFields(settings);
            
            // Show/hide custom badge
            if (hasCustomSettings(settings)) {
                document.getElementById('customSettingsBadge').classList.remove('d-none');
            } else {
                document.getElementById('customSettingsBadge').classList.add('d-none');
            }
            
            // Close modal
            const modal = bootstrap.Modal.getInstance(document.getElementById('settingsModal'));
            modal.hide();
            
            // Show success message
            alert('Settings saved successfully!');
        });

        // Reset settings button
        document.getElementById('resetSettingsBtn').addEventListener('click', function() {
            if (confirm('Are you sure you want to reset all settings to defaults?')) {
                // Clear localStorage
                localStorage.removeItem(SETTINGS_KEY);
                
                // Clear modal fields
                document.getElementById('modalEndpoint').value = '';
                document.getElementById('modalKey').value = '';
                document.getElementById('modalWhisperDeployment').value = '';
                document.getElementById('modalGptDeployment').value = '';
                document.getElementById('modalTtsDeployment').value = '';
                document.getElementById('modalTtsSpeedRatio').value = '1.0';
                document.getElementById('speedRatioValue').textContent = '1.00';
                document.getElementById('modalTtsResponseFormat').value = 'mp3';
                
                // Clear hidden form fields
                updateHiddenFields({});
                
                // Hide custom badge
                document.getElementById('customSettingsBadge').classList.add('d-none');
                
                // Show success message
                alert('Settings reset to defaults!');
            }
        });

        // Load settings when page loads
        document.addEventListener('DOMContentLoaded', function() {
            loadSettings();
        });

        document.getElementById('audioForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const audioUrl = document.getElementById('audioUrl').value;
            if (!audioUrl) {
                alert('Please enter an audio URL');
                return;
            }

            // Disable form and show processing state
            const button = document.getElementById('goButton');
            const buttonText = document.getElementById('buttonText');
            const buttonSpinner = document.getElementById('buttonSpinner');
            const urlInput = document.getElementById('audioUrl');
            
            button.disabled = true;
            urlInput.disabled = true;
            buttonText.textContent = 'Processing...';
            buttonSpinner.classList.remove('d-none');

            // Show progress section
            const progressSection = document.getElementById('processingProgress');
            progressSection.classList.remove('d-none');

            // Clear previous status
            document.getElementById('statusList').innerHTML = '';
            updateProgressBar(0);

            // Connect to SSE endpoint with settings
            const encodedUrl = encodeURIComponent(audioUrl);
            let sseUrl = `/Audio/ProcessAndSummarizeStream?audioUrl=${encodedUrl}`;
            
            // Add settings to URL if they exist
            const savedSettings = localStorage.getItem(SETTINGS_KEY);
            if (savedSettings) {
                try {
                    const settings = JSON.parse(savedSettings);
                    if (settings.endpoint) sseUrl += `&settingsEndpoint=${encodeURIComponent(settings.endpoint)}`;
                    if (settings.key) sseUrl += `&settingsKey=${encodeURIComponent(settings.key)}`;
                    if (settings.whisperDeployment) sseUrl += `&settingsWhisperDeployment=${encodeURIComponent(settings.whisperDeployment)}`;
                    if (settings.gptDeployment) sseUrl += `&settingsGptDeployment=${encodeURIComponent(settings.gptDeployment)}`;
                    if (settings.ttsDeployment) sseUrl += `&settingsTtsDeployment=${encodeURIComponent(settings.ttsDeployment)}`;
                    if (settings.ttsSpeedRatio) sseUrl += `&settingsTtsSpeedRatio=${settings.ttsSpeedRatio}`;
                    if (settings.ttsResponseFormat) sseUrl += `&settingsTtsResponseFormat=${encodeURIComponent(settings.ttsResponseFormat)}`;
                } catch (error) {
                    console.error('Error parsing settings for SSE:', error);
                }
            }
            
            eventSource = new EventSource(sseUrl);

            eventSource.onmessage = function(event) {
                try {
                    const status = JSON.parse(event.data);
                    latestStatus = status;
                    handleStatusUpdate(status);

                    // If complete or error, close connection and redirect
                    if (status.isComplete || status.isError) {
                        eventSource.close();
                        
                        if (status.isComplete) {
                            // Redirect to result page with query parameters
                            setTimeout(() => {
                                window.location.href = `/Audio/Result?episodeId=${encodeURIComponent(status.episodeId)}`;
                            }, 1000);
                        } else {
                            // Show error
                            button.disabled = false;
                            urlInput.disabled = false;
                            buttonText.textContent = 'Process & Summarize';
                            buttonSpinner.classList.add('d-none');
                        }
                    }
                } catch (error) {
                    console.error('Error parsing status update:', error);
                }
            };

            eventSource.onerror = function(error) {
                console.error('SSE Error:', error);
                eventSource.close();
                
                // Re-enable form
                button.disabled = false;
                urlInput.disabled = false;
                buttonText.textContent = 'Process & Summarize';
                buttonSpinner.classList.add('d-none');
                
                addStatusItem('error', 'Connection error', true);
            };
        });

        function handleStatusUpdate(status) {
            // Update progress bar
            updateProgressBar(status.progress);

            // Add status item to list
            const icon = getStatusIcon(status.stage);
            const isError = status.isError || false;
            addStatusItem(status.stage, status.message, isError, icon);
        }

        function updateProgressBar(progress) {
            const progressBar = document.getElementById('progressBar');
            progressBar.style.width = progress + '%';
            progressBar.setAttribute('aria-valuenow', progress);
            progressBar.textContent = progress + '%';

            // Change color based on progress
            progressBar.className = 'progress-bar progress-bar-striped progress-bar-animated';
            if (progress === 100) {
                progressBar.classList.add('bg-success');
            } else if (progress === 0) {
                progressBar.classList.add('bg-danger');
            }
        }

        function getStatusIcon(stage) {
            const icons = {
                'downloading': 'bi-download',
                'downloaded': 'bi-check-circle-fill',
                'transcribing': 'bi-mic',
                'transcribed': 'bi-check-circle-fill',
                'summarizing': 'bi-lightning',
                'summarized': 'bi-check-circle-fill',
                'generating-speech': 'bi-volume-up',
                'complete': 'bi-check-circle-fill',
                'error': 'bi-exclamation-triangle-fill'
            };
            return icons[stage] || 'bi-circle';
        }

        function addStatusItem(stage, message, isError = false, icon = 'bi-circle') {
            const statusList = document.getElementById('statusList');
            
            // Check if item for this stage already exists
            const existingItem = document.querySelector(`[data-stage="${stage}"]`);
            if (existingItem) {
                // Update existing item
                existingItem.querySelector('.status-message').textContent = message;
                if (!isError && stage !== 'error') {
                    existingItem.classList.remove('list-group-item-warning');
                    existingItem.classList.add('list-group-item-success');
                }
                return;
            }

            // Create new status item
            const item = document.createElement('li');
            item.className = 'list-group-item d-flex align-items-center';
            item.setAttribute('data-stage', stage);
            
            if (isError) {
                item.classList.add('list-group-item-danger');
            } else if (stage.includes('complete') || stage.includes('ed')) {
                item.classList.add('list-group-item-success');
            } else {
                item.classList.add('list-group-item-warning');
            }

            item.innerHTML = `
                <i class="bi ${icon} me-2"></i>
                <span class="status-message">${message}</span>
            `;

            statusList.appendChild(item);
            
            // Scroll to bottom
            statusList.scrollTop = statusList.scrollHeight;
        }
    </script>
}
