{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AzureStorageConnectionString": "<YOUR_AZURE_STORAGE_CONNECTION_STRING>",
  "AzureStorage": {
    "Containers": {
      "Episodes": "episodes",
      "Transcripts": "transcripts",
      "Summaries": "summaries"
    }
  },
  "LocalStorage": {
    "BasePath": "LocalStorageData"
  },
  "AzureOpenAI": {
    "Endpoint": "<YOUR_AZURE_OPENAI_ENDPOINT>",
    "Key": "<YOUR_AZURE_OPENAI_KEY>",
    "SpeechToText": {
      "DeploymentName": "whisper"
    },
    "GPT": {
      "DeploymentName": "gpt-5-2"
    },
    "TextToSpeech": {
      "DeploymentName": "gpt-4o-mini-tts",
      "SpeedRatio": 1.0,
      "ResponseFormat": "mp3"
    }
  }
}
